<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- activity_screen_slide.xml -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/view_pager_padding"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/welcome_wizard_next_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_pager_padding"
        android:background="@android:color/transparent"
        android:text="@string/next"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pager" />

    <Button
        android:id="@+id/welcome_wizard_back_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_pager_padding"
        android:layout_marginVertical="@dimen/tile_padding"
        android:background="@android:color/transparent"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pager" />

</androidx.constraintlayout.widget.ConstraintLayout>