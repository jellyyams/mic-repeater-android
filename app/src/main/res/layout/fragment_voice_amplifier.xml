<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding"
    android:background="@color/colorPrimary">
    <com.kylecombes.micrepeater.ui.main.MicDeviceStatusTile
        android:id="@+id/status_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/voice_amplifier_status_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/amplifying_off"
        app:layout_constraintTop_toBottomOf="@id/status_box"
        app:layout_constraintBottom_toTopOf="@id/amplifying_control_tile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.kylecombes.micrepeater.ui.main.AmplifyingControlTile
        android:id="@+id/amplifying_control_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fragment_padding"/>
</androidx.constraintlayout.widget.ConstraintLayout>